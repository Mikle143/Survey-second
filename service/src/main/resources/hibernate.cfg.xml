<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:postgresql://localhost:5432/survey_2</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">postgres</property>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgresPlusDialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <mapping class="ru.vdovmb.entity.AnswerEntity"/>
        <mapping class="ru.vdovmb.entity.QuestionEntity"/>
        <mapping class="ru.vdovmb.entity.SurveyEntity"/>
        <mapping class="ru.vdovmb.entity.SurveyQuestionAnswerEntity"/>
        <mapping class="ru.vdovmb.entity.SurveyQuestionEntity"/>
        <mapping class="ru.vdovmb.entity.AnswerTextEntity"/>
        <mapping class="ru.vdovmb.entity.UserEntity"/>

    </session-factory>
</hibernate-configuration>